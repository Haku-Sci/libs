{
    "name": "debug-launcher",
    "displayName": "Debug Launcher",
    "description": "Launch debug configurations from webview",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.74.0"
    },
    "categories": ["Other"],
    "activationEvents": [
        "onCommand:debug-launcher.openPanel"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "debug-launcher.openPanel",
                "title": "Open Debug Launcher Panel"
            }
        ],
        "configuration": {
            "title": "Debug Launcher",
            "properties": {
                "debugLauncher.htmlFile": {
                    "type": "string",
                    "default": "src/webview.html",
                    "description": "Chemin vers le fichier HTML du webview (relatif au workspace)"
                },
                "debugLauncher.launchJsonPath": {
                    "type": "string",
                    "default": ".vscode/launch.json",
                    "description": "Chemin vers le fichier launch.json (relatif au workspace)"
                },
                "debugLauncher.servicesJsonPath": {
                    "type": "string",
                    "default": "services.json",
                    "description": "Chemin vers le fichier JSON contenant les services (relatif au workspace)"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/vscode": "^1.74.0",
        "@types/node": "16.x",
        "typescript": "^4.9.4"
    }
}